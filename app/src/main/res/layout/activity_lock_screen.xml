<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.passcrypt.passcrypt.LockScreen">

    <TextView
        android:id="@+id/setPin"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:gravity="center"
        android:text="Set Pin"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tvPin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPin"
        android:layout_width="134dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="----"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="45dp"
        app:layout_constraintBottom_toTopOf="@+id/gridLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <GridLayout
        android:id="@+id/gridLayout"
        android:layout_width="270dp"
        android:layout_height="358dp"
        android:layout_below="@+id/tvPin"
        android:layout_centerHorizontal="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_column="0"

            android:layout_row="0"
            android:text="1" />

        <Button
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/btn1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_toEndOf="@+id/btn1"
            android:layout_toRightOf="@+id/btn1"
            android:text="2" />

        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn2"
            android:layout_column="2"
            android:layout_row="0"
            android:layout_toEndOf="@+id/btn2"
            android:layout_toRightOf="@+id/btn2"
            android:text="3" />

        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn1"
            android:layout_column="0"
            android:layout_row="1"
            android:text="4" />

        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn4"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_toEndOf="@+id/btn4"
            android:layout_toRightOf="@+id/btn4"
            android:text="5" />

        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn5"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_toEndOf="@+id/btn5"
            android:layout_toRightOf="@+id/btn5"
            android:text="6" />

        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/btn4"
            android:layout_column="0"
            android:layout_row="2"
            android:text="7" />

        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn7"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_toEndOf="@+id/btn7"
            android:layout_toRightOf="@+id/btn7"
            android:text="8" />

        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn8"
            android:layout_alignLeft="@+id/btn6"
            android:layout_alignStart="@+id/btn6"
            android:layout_column="2"
            android:layout_row="2"
            android:text="9" />

        <Button
            android:id="@+id/btn0"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/btn8"
            android:layout_column="0"
            android:layout_row="3"
            android:layout_toLeftOf="@+id/btn9"
            android:layout_toStartOf="@+id/btn9"
            android:text="0" />

        <Button
            android:id="@+id/btn_show_pass"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_below="@+id/btn8"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_toLeftOf="@+id/btn9"
            android:layout_toStartOf="@+id/btn9"
            android:text="GO" />

        <Button
            android:id="@+id/btnDel"
            android:layout_width="wrap_content"
            android:layout_height="90dp"
            android:layout_alignBottom="@+id/btn8"
            android:layout_alignLeft="@+id/btn6"
            android:layout_alignStart="@+id/btn6"
            android:layout_column="2"
            android:layout_row="3"
            android:text="DEL" />

    </GridLayout>

    <!-- <Button
         android:id="@+id/btn_show_pass"
         android:layout_width="203dp"
         android:layout_height="53dp"
         android:text="Show Passwords"
         app:layout_constraintBottom_toBottomOf="parent"
         app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintHorizontal_bias="0.5"
         app:layout_constraintStart_toStartOf="parent"
         app:layout_constraintTop_toTopOf="parent" />-->
</android.support.constraint.ConstraintLayout>
