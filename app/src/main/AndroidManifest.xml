<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.passcrypt.passcrypt">

    <uses-permission android:name="android.permission.USE_FINGERPRINT" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".FingerprintActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".PassList" />
        <activity android:name=".PassData" />
        <activity android:name=".ShowPassData" />
        <activity android:name=".show_update_pass" />
        <activity android:name=".SetPin" />
        <activity android:name=".LockScreen" />
        <activity android:name=".AuthSuccess" />
        <activity android:name=".AddUserID" />
        <activity android:name=".SaveToFile" />
        <activity android:name=".DisplayPasswords"></activity>
    </application>

</manifest>